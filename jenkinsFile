pipeline {
    agent any
    tools {
        maven "maven"
    }
    stages {
        stage("Checkout") {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/siposisp/a']])
            }
        }
        stage("Build JAR File") {
            steps {
                dir("LAB-TBD") {
                    bat "mvn clean install"
                }
            }
        }
        stage("Test Backend") {
            steps {
                dir("LAB-TBD") {
                    bat "mvn test"
                }
            }
        }
        stage("Build Docker Image backend") {
            steps {
                dir("LAB-TBD") {
                    bat "docker build -t niko085/pep2devsecops_backend ."
                }
            }
        }
        stage("Push Docker Image backend") {
            steps {
                dir("LAB-TBD") {
                    bat 'docker login -u niko085 -p Nicolas2519'
                    bat 'docker push niko085/pep2devsecops_backend'
                }
            }
        }

        stage("Deploy Backend with Docker Compose") {
            steps {
                dir("LAB-TBD") {
                    bat "docker-compose down || exit 0"
                    bat "docker-compose up -d --build"
                }
            }
        }
        }
            stage("Build Frontend"){
                steps{
                    dir("Frontend"){
                        bat "npm install"
                        bat "npm run build"
                    }
                }
            }
            stage("Build Docker Image frontend") {
                steps {
                    dir("Frontend") {
                        bat "docker build -t niko085/pep2devsecops_frontend ."
                    }
                }
            }
            stage("Push Docker Image frontend") {
                steps {
                    dir("Frontend") {
                        bat "docker login -u niko085 -p Nicolas2519"
                        bat "docker push niko085/pep2devsecops_frontend"
                    }
                }
            }
            stage("Deploy Backend with Docker Compose") {
                steps {
                    dir("LAB-TBD") {
                        bat "docker-compose down || exit 0"
                        bat "docker-compose up -d --build"
                    }
                }
            }
            stage("Deploy Frontend with Docker Compose") {
                steps {
                    dir("Frontend") {
                        bat "docker-compose down || exit 0"
                        bat "docker-compose up -d --build"
                    }
                }
            }
        
        post {
            always {
                bat "docker logout"
    
            }
        }
    }
